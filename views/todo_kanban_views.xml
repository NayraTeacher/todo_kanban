<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <act_window id="action_todo_kanban" name="To-do Kanban Board" res_model="todo.task" view_mode="kanban,tree,form" />
    <!-- Menu item to open To-do Task list colaborativa -->
    <menuitem id="menu_todo_kanban" name="To-do Kanban Board" parent="todo_app.l1_menu_todo_task" sequence="30" action="action_todo_kanban" />
    <record id="To-Do Task Kanban" model="ir.ui.view">
        <field name="name">To-Do Tasks Kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="kanban_state" default_order="date_deadline" quick_create="false">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h4>
                                    <a type="open">
                                        <field name="name" />
                                    </a>
                                </h4>
                                <ul>
                                    <li>
                                        <field name="user_id" />
                                    </li>
                                    <li>
                                        <field name="date_deadline" />
                                    </li>
                                </ul>
                                <div class="oe_kanban_bottom_right">
                                    <field name="kanban_state" widget="kanban_state_selection"/>
                                </div>
                                <div class="oe_kanban_footer_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
       <record id="view_form_todo_user_inherited" model="ir.ui.view">
        <field name="name">Todo Task form â€“ en Kanban</field>
        <field name="model">todo.task</field>
        <field name="inherit_id" ref="todo_user.view_form_todo_task_inherited"/>
        <field name="arch" type="xml">
            <field name="is_done" position="after">
                <field name="priority" />
                <field name="kanban_state" />
            </field>
        </field>
    </record>
</odoo>